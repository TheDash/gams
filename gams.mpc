project (ros2gams) : using_madara, using_ros, using_gams {
  exeout = $(GAMS_ROOT)/bin
  exename = ros2gams
  libpaths += $(ROS_ROOT)/../../lib

  requires += ros

  macros +=  _USE_MATH_DEFINES

  libs += roscpp
  libs += cpp_common
  libs += roscpp_serialization
  libs += rostime
  libs += rosbag
  libs += rosbag_storage

  Documentation_Files {
  }

  Header_Files {
  }

  Source_Files {
    src/gams/programs/ros2gams.cpp
  }
}
